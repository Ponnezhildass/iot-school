                <!--android:layout_height="match_parent"-->
                <!--tools:layout="@android:layout/list_content" />-->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/activity_choose_striptestFragmentPlaceholder">
            </FrameLayout>

        </LinearLayout>

        <FrameLayout android:id="@+id/choose_striptest_detail_container"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />


    </LinearLayout>
